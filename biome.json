{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "globals": [
      "Contest",
      "Problem",
      "ContestAndProblem",
      "MergedProblem",
      "ProblemModel",
      "UserRankEntry",
      "UserLangRankEntry",
      "RankingEntry",
      "SumRankingEntry",
      "LangRankingEntry",
      "SubmissionEntry",
      "getContests",
      "getProblems",
      "getDetailedProblems",
      "getContestsAndProblems",
      "getEstimatedDifficulties",
      "getSubmissions"
    ]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/types/atcoder-problems-api.d.ts"],
    "rules": {
      "all": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
